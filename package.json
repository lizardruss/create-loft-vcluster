{
  "name": "create-vcluster",
  "version": "0.0.0",
  "private": true,
  "description": "GitHub Action to create a Loft VCluster",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "npm run package:main && npm run package:post",
    "package:main": "ncc build lib/main.js --source-map --license licenses.txt --out dist/main",
    "package:post": "ncc build lib/post.js --source-map --license licenses.txt --out dist/post",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loft-sh/create-vcluster.git"
  },
  "keywords": [
    "actions",
    "loft",
    "vcluster"
  ],
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/io": "^1.1.2",
    "semver": "^7.3.8"
  },
  "devDependencies": {
    "@types/node": "^18.13.0",
    "@types/semver": "^7.3.13",
    "@typescript-eslint/parser": "^5.50.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.33.0",
    "eslint-plugin-github": "^4.6.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.4.1",
    "js-yaml": "^4.1.0",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  }
}
